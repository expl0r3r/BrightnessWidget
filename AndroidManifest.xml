<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="priv.twoerner.brightnesswidget" android:installLocation="internalOnly"
	android:versionCode="6" android:versionName="1.5">
	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.WRITE_SETTINGS"></uses-permission>

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<receiver android:name=".BaseBrightnessWidgetProvider"></receiver>
		<receiver android:name=".BrightnessWidgetProvider"
			android:label="Widget 1x5">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE"></action>
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/brightness_widget_info"></meta-data>
		</receiver>
		<!-- TODO: Define different layout for second widget size -->
		<receiver android:name=".BrightnessWidgetProvider_1_2"
			android:label="Widget 1x2">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE"></action>
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/brightness_widget_info_2"></meta-data>
		</receiver>
		<activity android:name=".UpdateBrightnessActivity"
			android:theme="@style/Theme.Transparent" android:label="Transparent activity"></activity>
		<activity android:name=".WidgetSettings">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"></action>
			</intent-filter>
		</activity>
		<service android:name=".BrightnessWidgetProvider$UpdateService"></service>


	</application>
</manifest>